FLASK_SECRET_KEY=change-this-secret
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax
REMEMBER_COOKIE_SECURE=true
REMEMBER_COOKIE_SAMESITE=Lax
DATABASE_URL=sqlite:///auth.db
APP_BASE_URL=http://localhost:5000
PUBLIC_LOGIN_PATH=/auth/login
PUBLIC_LOGOUT_PATH=/auth/logout
PUBLIC_REGISTER_PATH=/auth/register
PUBLIC_ADMIN_USERS_PATH=/auth/admin/users
PUBLIC_CONFIRM_EMAIL_PREFIX=/auth/confirm-email
PUBLIC_SUGGEST_PATH=/auth/suggest-users
LOGIN_SUGGEST_ENABLED=false
LOGIN_SUGGEST_MIN_CHARS=3
LOGIN_SUGGEST_RATE_LIMIT_PER_MIN=120
LOGIN_RATE_LIMIT_PER_MIN=30
LOGIN_SUGGEST_LDAP_ENABLED=false
LDAP_SUGGEST_FILTER=(uid={query}*)
EMAIL_CONFIRM_MAX_AGE_SECONDS=86400

# LDAP (opzionale ma consigliato)
LDAP_ENABLED=true
LDAP_SERVER_URI=ldap://ldap.example.org
LDAP_USE_SSL=false
LDAP_BASE_DN=dc=example,dc=org
LDAP_SEARCH_FILTER=(uid={username})
LDAP_BIND_DN=
LDAP_BIND_PASSWORD=

# Se vuoi forzare un DN template diretto (alternativa alla search)
# LDAP_USER_DN_TEMPLATE=uid={username},ou=people,dc=example,dc=org

# RADIUS / eduroam (opzionale)
RADIUS_ENABLED=false
RADIUS_SERVER=127.0.0.1
RADIUS_PORT=1812
RADIUS_SECRET=testing123
RADIUS_TIMEOUT=5
RADIUS_NAS_ID=SSO-Gateway
RADIUS_NAS_IP=127.0.0.1
RADIUS_AUTH_METHOD=EAP-MSCHAPV2 # o MSCHAPV2

# SMTP (abilita per conferma email utente + notifica admin)
MAIL_ENABLED=false
MAIL_HOST=smtp.example.org
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=no-reply@example.org
ADMIN_NOTIFY_EMAIL=admin1@example.org,admin2@example.org
LOGO_URL=https://example.org/path/logo.png

# Domini email consentiti per auto-registrazione locale (separati da virgola)
REGISTER_ALLOW_ANY_DOMAIN=false
REGISTER_ALLOWED_DOMAINS=example.org
